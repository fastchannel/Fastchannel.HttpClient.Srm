<Project>
    <!-- :: Compilation Constraints :: -->
    <PropertyGroup>
        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
        <NoWarn>1591;1701;1702;1705</NoWarn>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <DebugType Condition="'$(Configuration)' == 'Debug' AND '$(OS)' == 'Windows_NT'">full</DebugType>
    </PropertyGroup>

    <!-- :: Package Generation :: -->
    <PropertyGroup>
        <Product>Vertis Commerce</Product>
        <Authors>Fast Channel</Authors>
        <Company>Fast Channel</Company>
        <Copyright>Copyright 2012-2018</Copyright>
        <PackageTags>vertis commerce;http clients;fast channel</PackageTags>
        <PackageLicenseUrl>https://cdn.rawgit.com/fastchannel/kaive/e7397967/LICENSE.md</PackageLicenseUrl>
        <PackageProjectUrl>http://kb.fastchannel.com</PackageProjectUrl>
        <PackageIconUrl>https://cdn.rawgit.com/fastchannel/kaive/f1f71a5d/artwork/fastchannel_logo_64x64.png</PackageIconUrl>
        <RepositoryUrl>https://vertisnet.visualstudio.com/Product_Development/_git/Framework</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <IncludeSource>True</IncludeSource>
        <IncludeSymbols>True</IncludeSymbols>
        <NoPackageAnalysis>True</NoPackageAnalysis>
    </PropertyGroup>

    <!-- :: Compilation Constants :: -->
    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
        <DefineConstants>NETSTANDARD</DefineConstants>
        <DefineConstants>NETSTANDARD1_3</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.4' ">
        <DefineConstants>NETSTANDARD</DefineConstants>
        <DefineConstants>NETSTANDARD1_4</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.5' ">
        <DefineConstants>NETSTANDARD</DefineConstants>
        <DefineConstants>NETSTANDARD1_5</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
        <DefineConstants>NETSTANDARD</DefineConstants>
        <DefineConstants>NETSTANDARD1_6</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
        <DefineConstants>NETSTANDARD</DefineConstants>
        <DefineConstants>NETSTANDARD2_0</DefineConstants>
    </PropertyGroup>
</Project>